                        transition: all 0.3s ease-out;
                        font-weight: 500;
                    }

                        .sidebar ul li a:before {
                            content: '';
                            position: absolute;
                            bottom: 0;
                            left: 50%;
                            right: 50%;
                            transform: translate(-50%,-50%);
                            width: 0;
                            height: 1px;
                            background: #4CAF50;
                            z-index: -1;
                            transition: all 0.3s ease-out;
                        }

                        .sidebar ul li a:hover:before {
                            width: 100%;
                        }

                        .sidebar ul li a:hover {
                            color: #4CAF50;
                        }

        .sidebarshow {
