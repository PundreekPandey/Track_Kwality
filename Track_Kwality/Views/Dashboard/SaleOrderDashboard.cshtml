    <script type="text/javascript">
    var btn = document.querySelector('.toggle');
    var btnst = true;
    function toggleSidebar() {
      var sidebar = document.getElementById("sidebar");
      var mainContent = document.getElementById("foots");
      var anotherElement = document.getElementById("main");
      if (btnst) {
        document.querySelector('.toggle span').classList.add('toggle');
        sidebar.classList.add('sidebarshow');
        mainContent.style.marginLeft = "150px";
        anotherElement.style.marginLeft = "150px";
      }
      else {
        document.querySelector('.toggle span').classList.remove('toggle');
        sidebar.classList.remove('sidebarshow');
        mainContent.style.marginLeft = "-90px";
        anotherElement.style.marginLeft = "-90px";
      }
      btnst = !btnst;
    }

    toggleSidebar();

    btn.onclick = function () {
      toggleSidebar();
    };

    modeToggle.addEventListener("click", () => {
      modeToggle.classList.toggle("active");
      body.classList.toggle("dark");

      if (!body.classList.contains("dark")) {
        localStorage.setItem("mode", "light-mode");
      } else {
        localStorage.setItem("mode", "dark-mode");
      }
    });
    </script>

