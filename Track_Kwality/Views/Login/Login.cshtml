            //}
            //return true;
        }

        $("#txt_password").on("input", function () {
            var passwordField = $(this);
            var showIcon = $("#showIcon");
            if (passwordField.val().trim().length > 0) {
                showIcon.css("display", "block");
            }
            else {
                showIcon.css("display", "none");
            }
        });

        // Sample definition of GlobalResources
        var GlobalResources = {
            'Empty': 'Can not be blank',
            'AlertCaption': 'Kwality Phrmaceuticals Ltd.',
            'Error': 'Error Value'
        };

        // Function to retrieve resource values
        function GetResourceValue(name) {
            return GlobalResources[name];
        }

